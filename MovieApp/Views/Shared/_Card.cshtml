@model Movie
<div class="card mb-3" id="@Model.Id">
    <div class="row no-gutter">
        <div class="col-md-3">
            <img src="~/img/@Model.Image" width="200">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <a asp-action="Details" asp-conrtoller="Home" asp-route-id="@Model.Id">
                <h5 class="card-title-mb-4">
                    @Model.Name</h5> </a>
                <p class="card-text">
                    <small class="text-muted">1 days ago</small>
                </p>
            </div>
        </div>
    </div>
</div>
